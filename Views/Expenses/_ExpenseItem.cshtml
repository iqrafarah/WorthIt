@model WorthIt.Models.ExpenseItemViewModel

<div class="expense-item">
    <div class="expense-item d-flex justify-content-between align-items-center my-3">
        <div class="d-flex align-items-center gap-3">
            <div
                class="expense-icon bg-primary d-flex flex-column align-items-center gap-y-2 text-black rounded-circle">
                @(Model.Category != null ? Model.Category.CategoryIcon : "")
            </div>
            <div class="d-flex flex-column">
                <span class="expense-name text-black text-500 text-start">
                    @(Model.Category != null ? Model.Category.CategoryName : "Unknown")
                </span>
                <span class="expense-date text-start">
                    @(Model.Expense != null ? string.Format("${0:0.00}", Model.Expense.Amount) : "")
                </span>
            </div>
        </div>
        <div class="hour-cost">
            @{
                string timeText = "";

                if (Model.User != null && Model.User.HourlyWage > 0 && Model.Expense != null)
                {
                    decimal hours = Model.Expense.Amount / Model.User.HourlyWage;

                    if (hours >= 1)
                    {
                        timeText = $"{hours:0.#}h";
                    }
                    else
                    {
                        var minutes = hours * 60;

                        if (minutes >= 1)
                        {
                            timeText = $"{minutes:0} min";
                        }
                        else
                        {
                            var seconds = minutes * 60;
                            timeText = $"{seconds:0} sec";
                        }
                    }
                }
            }

            @if (!string.IsNullOrEmpty(timeText))
            {
                <span title="Hours of work">@timeText</span>
            }
        </div>
    </div>
</div>